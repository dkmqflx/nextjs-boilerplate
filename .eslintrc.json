{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:@tanstack/query/recommended",
    "prettier"
  ],
  // rules for fsd
  "rules": {
    "import/no-restricted-paths": [
      "warn",
      {
        "zones": [
          {
            "target": "./src/features",
            "from": ["./src/app", "./src/widgets"]
          },
          {
            "target": "./src/entities",
            "from": ["./src/app", "./src/widgets", "./src/features"]
          },
          {
            "target": "./src/shared",
            "from": [
              "./src/app",
              "./src/widgets",
              "./src/features",
              "./src/entities"
            ]
          }
        ]
      }
    ]
  }
}
